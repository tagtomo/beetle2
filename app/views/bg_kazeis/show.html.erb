<%- model_class = BgKazei -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:number) %>:</strong></dt>
  <dd><%= @bg_kazei.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kazei_number) %>:</strong></dt>
  <dd><%= @bg_kazei.kazei_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sotonendo) %>:</strong></dt>
  <dd><%= @bg_kazei.sotonendo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:soto_y) %>:</strong></dt>
  <dd><%= @bg_kazei.soto_y %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kazeinendo) %>:</strong></dt>
  <dd><%= @bg_kazei.kazeinendo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kazei_y) %>:</strong></dt>
  <dd><%= @bg_kazei.kazei_y %></dd>
  <dt><strong><%= model_class.human_attribute_name(:declaration_type) %>:</strong></dt>
  <dd><%= @bg_kazei.declaration_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:declaration_date) %>:</strong></dt>
  <dd><%= @bg_kazei.declaration_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              bg_kazeis_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bg_kazei_path(@bg_kazei), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bg_kazei_path(@bg_kazei),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
