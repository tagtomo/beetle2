<%- model_class = BgKazei -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:kazei_number) %></th>
      <th><%= model_class.human_attribute_name(:sotonendo) %></th>
      <th><%= model_class.human_attribute_name(:soto_y) %></th>
      <th><%= model_class.human_attribute_name(:kazeinendo) %></th>
      <th><%= model_class.human_attribute_name(:kazei_y) %></th>
      <th><%= model_class.human_attribute_name(:declaration_type) %></th>
      <th><%= model_class.human_attribute_name(:declaration_date) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bg_kihon.bg_kazeis.each do |bg_kazei| %>
      <tr>
        <td><%= link_to bg_kazei.id, bg_kazei_path(bg_kazei) %></td>
        <td><%= bg_kazei.number %></td>
        <td><%= bg_kazei.kazei_number %></td>
        <td><%= bg_kazei.sotonendo %></td>
        <td><%= bg_kazei.soto_y %></td>
        <td><%= bg_kazei.kazeinendo %></td>
        <td><%= bg_kazei.kazei_y %></td>
        <td><%= bg_kazei.declaration_type %></td>
        <td><%= bg_kazei.declaration_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bg_kazei_path(bg_kazei), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bg_kazei_path(bg_kazei),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bg_kazei_path,
            :class => 'btn btn-primary' %>
