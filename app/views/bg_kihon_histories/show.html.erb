  <dd><%= @bg_kihon_history.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:history_no) %>:</strong></dt>
  <dd><%= @bg_kihon_history.history_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kazei_type) %>:</strong></dt>
  <dd><%= @bg_kihon_history.kazei_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:toriatukaitabako_type) %>:</strong></dt>
  <dd><%= @bg_kihon_history.toriatukaitabako_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tokureitabako_type) %>:</strong></dt>
  <dd><%= @bg_kihon_history.tokureitabako_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:send_type) %>:</strong></dt>
  <dd><%= @bg_kihon_history.send_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_sdate) %>:</strong></dt>
  <dd><%= @bg_kihon_history.stop_sdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_edate) %>:</strong></dt>
  <dd><%= @bg_kihon_history.stop_edate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chenge_date) %>:</strong></dt>
  <dd><%= @bg_kihon_history.chenge_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:change_jiyu) %>:</strong></dt>
  <dd><%= @bg_kihon_history.change_jiyu %></dd>
