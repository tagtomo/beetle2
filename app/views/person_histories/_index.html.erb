<%- model_class = PersonHistory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:history_no) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:branch_name) %></th>
      <th><%= model_class.human_attribute_name(:zipno) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:address_kata) %></th>
      <th><%= model_class.human_attribute_name(:update_date) %></th>
      <th><%= model_class.human_attribute_name(:update_reason) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @person.person_histories.each do |person_history| %>
      <tr>
        <td><%= link_to person_history.id, person_history_path(person_history) %></td>
        <td><%= person_history.history_no %></td>
        <td><%= person_history.name %></td>
        <td><%= person_history.branch_name %></td>
        <td><%= person_history.zipno %></td>
        <td><%= person_history.address %></td>
        <td><%= person_history.address_kata %></td>
        <td><%= person_history.update_date %></td>
        <td><%= person_history.update_reason %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      person_history_path(person_history),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
