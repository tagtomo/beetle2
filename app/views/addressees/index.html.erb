<%- model_class = Addressee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:data_type) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:zipno) %></th>
      <th><%= model_class.human_attribute_name(:address1_cd) %></th>
      <th><%= model_class.human_attribute_name(:address2_cd) %></th>
      <th><%= model_class.human_attribute_name(:address3_cd) %></th>
      <th><%= model_class.human_attribute_name(:address4_cd) %></th>
      <th><%= model_class.human_attribute_name(:address5_cd) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:address_kata) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @addressees.each do |addressee| %>
      <tr>
        <td><%= link_to addressee.id, addressee_path(addressee) %></td>
        <td><%= addressee.number %></td>
        <td><%= addressee.data_type %></td>
        <td><%= addressee.name %></td>
        <td><%= addressee.zipno %></td>
        <td><%= addressee.address1_cd %></td>
        <td><%= addressee.address2_cd %></td>
        <td><%= addressee.address3_cd %></td>
        <td><%= addressee.address4_cd %></td>
        <td><%= addressee.address5_cd %></td>
        <td><%= addressee.address %></td>
        <td><%= addressee.address_kata %></td>
        <td><%= addressee.start_date %></td>
        <td><%= addressee.end_date %></td>
        <td><%=l addressee.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_addressee_path(addressee), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      addressee_path(addressee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_addressee_path,
            :class => 'btn btn-primary' %>
