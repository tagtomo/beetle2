<%= form_for @bg_kihon, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :kazei_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :kazei_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :toriatukaitabako_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :toriatukaitabako_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tokureitabako_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tokureitabako_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :send_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :send_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stop_sdate, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :stop_sdate, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stop_edate, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :stop_edate, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :chenge_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :chenge_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :change_jiyu, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :change_jiyu, :class => 'text_field' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            bg_kihons_path, :class => 'btn btn-default' %>
 
<% end %>
