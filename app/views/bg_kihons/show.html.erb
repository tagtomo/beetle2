  <dd><%= @bg_kihon.kazei_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:toriatukaitabako_type) %>:</strong></dt>
  <dd><%= @bg_kihon.toriatukaitabako_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tokureitabako_type) %>:</strong></dt>
  <dd><%= @bg_kihon.tokureitabako_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:send_type) %>:</strong></dt>
  <dd><%= @bg_kihon.send_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_sdate) %>:</strong></dt>
  <dd><%= @bg_kihon.stop_sdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop_edate) %>:</strong></dt>
  <dd><%= @bg_kihon.stop_edate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chenge_date) %>:</strong></dt>
  <dd><%= @bg_kihon.chenge_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:change_jiyu) %>:</strong></dt>
  <dd><%= @bg_kihon.change_jiyu %></dd>
