<%= form_for @bank_account, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :data_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :data_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bank_cd, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :bank_cd, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :store_cd, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :store_cd, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :account_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :account_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :account_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :account_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :account_holder, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :account_holder, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :account_holder_k, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :account_holder_k, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :transfer_method, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :transfer_method, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :transfer_request_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :transfer_request_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stop_flg, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :stop_flg, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_date, :class => 'text_field' %>
    </div>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', :back, :class => 'btn btn-default'  %>
  <%#= link_to t('.cancel', :default => t("helpers.links.cancel")),
            bank_accounts_path, :class => 'btn btn-default' %>

<% end %>
